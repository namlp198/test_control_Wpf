<UserControl x:Class="test_control_WPF.TriStateToggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:test_control_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="300"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True">
    <UserControl.Resources>
        <local:MathConverter x:Key="MathConverter" />

        <Style x:Key="StateButtonStyle"
               TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                CornerRadius="0"
                                Background="Transparent"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="Transparent" />
                                <Setter Property="Foreground"
                                        Value="White" />
                            </Trigger>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#E0E0E0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground"
                    Value="#616161" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Padding"
                    Value="0" />
            <Setter Property="Margin"
                    Value="0" />
            <Setter Property="BorderThickness"
                    Value="0" />
        </Style>
        <Style x:Key="DebugThumbStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="Red" />
            <!-- Màu nổi bật để debug -->
            <Setter Property="BorderBrush"
                    Value="Blue" />
            <Setter Property="BorderThickness"
                    Value="2" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Border Background="#F5F5F5"
                CornerRadius="15"
                BorderThickness="1"
                BorderBrush="#E0E0E0">
            <Grid Margin="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Background Track -->
                <!--<Border Grid.ColumnSpan="3"
                        CornerRadius="15"
                        Background="#EEEEEE"
                        Margin="1" />-->

                <!-- State Buttons -->
                <RadioButton x:Name="OffButton"
                             Grid.Column="0"
                             Style="{StaticResource StateButtonStyle}"
                             GroupName="TriStateToggle"
                             Checked="StateButton_Checked" />

                <RadioButton x:Name="On1Button"
                             Grid.Column="1"
                             Style="{StaticResource StateButtonStyle}"
                             GroupName="TriStateToggle"
                             Checked="StateButton_Checked" />

                <RadioButton x:Name="On2Button"
                             Grid.Column="2"
                             Style="{StaticResource StateButtonStyle}"
                             GroupName="TriStateToggle"
                             Checked="StateButton_Checked" />

                <!-- Thumb indicator -->
                <Border x:Name="Thumb"
                        Width="{Binding ActualWidth, ElementName=OffButton, Converter={StaticResource MathConverter}, ConverterParameter=@-15}"
                        Height="28"
                        CornerRadius="13"
                        Background="White"
                        BorderThickness="1"
                        BorderBrush="#BDBDBD"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Panel.ZIndex="1">
                    <Border.RenderTransform>
                        <TranslateTransform x:Name="ThumbTransform" />
                    </Border.RenderTransform>
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="5"
                                          ShadowDepth="1"
                                          Color="#40000000" />
                    </Border.Effect>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
